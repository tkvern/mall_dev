<div class="container-fluid center-block">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4 col-md-4 col-md-offset-4 col-sm-5 col-sm-offser-4">
      <h3 class="text-center">超级管理员登录</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'} ) do |f| %>

        <div class="form-group">
          <%= f.label :username, "用户名",class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.email_field :username, autofocus: true, class: 'form-control',placeholder: '用户名' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, "密码", class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off",class: 'form-control',placeholder: '密码' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-4">
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :记住我 %>
            </div>
            <% end -%>
          </div>
          <%= render "devise/shared/links" %>
          
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 ">
            <%= f.submit "登录",class: 'btn btn-primary btn-block' %>
          </div>
        </div>
       

      <% end -%>
     
    </div>
  </div>
</div>













